[FORMAT]

# Increase certain limits that are too tight by default.
max-line-length=120
max-args=6

# Regexp for a line that is allowed to be longer than the limit.
ignore-long-lines=\".*\"

# Allow certain single-character variable names
good-names=f,w,h,c,i,j,k,x,y,z,r,g,b,e,ax,bar

# Expected format of line ending, e.g. empty (any line ending), LF or CRLF.
expected-line-ending-format=LF

# Disable certain warnings that are not really applicable
disable=too-many-instance-attributes,too-few-public-methods,locally-disabled
